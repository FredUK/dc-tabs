{{#dc-tabs selected-index=selectedTabIndex}}
  {{#dc-tab-list}}
    {{#each tab in tabs}}
      {{#dc-tab}}
        <b>{{tab.name}}</b>
        <button {{action "removeTab" tab}}>Ã—</button>
      {{/dc-tab}}
    {{/each}}
    <button {{action "editNewTab"}}>add a tab</button>
  {{/dc-tab-list}}

  {{#each tab in tabs}}
    {{#dc-tab-panel}}
      <p>{{tab.description}}</p>
    {{/dc-tab-panel}}
  {{/each}}
{{/dc-tabs}}

{{#if adding}}
  <form id="addTabForm" {{action "saveNewTab" on="submit"}}>
    <p>
       <label for="name">Tab Label:</label><br>
       {{input value=newTab.name}}
    </p>
    <p>
      <label for="description">Tab Description:</label><br>
      {{textarea value=newTab.description}}
    </p>
    <p>
      <button type="submit">save</button>
    </p>
  </form>
{{/if}}
